<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.dishq.buzz.ui.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:padding="0dp"
        android:background="@drawable/connect_screen_image">

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/white"
            android:text="@string/start_signup_message"
            android:textSize="@dimen/user_profile_reading_text" />

        <TextView
            android:id="@+id/restaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/restaurants"
            android:textColor="@color/white"
            android:textSize="@dimen/user_profile_reading_text" />

        <TextView
            android:id="@+id/pubs"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/pubs"
            android:textColor="@color/white"
            android:textSize="@dimen/user_profile_reading_text" />

        <TextView
            android:id="@+id/bars"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/bars"
            android:textColor="@color/white"
            android:textSize="@dimen/user_profile_reading_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/connect_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/connect_with"
        android:textColor="#de111111"
        android:alpha="0.87"
        android:textSize="@dimen/home_page_reading_text" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/facebook"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/facebook"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/google_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/google"
        tools:ignore="ContentDescription" />

</LinearLayout>
