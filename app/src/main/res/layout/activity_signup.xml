<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomescreen"
    android:gravity="center_horizontal"
    tools:context="com.dishq.buzz.ui.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connect_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:alpha="0.87"
            android:gravity="center_horizontal"
            android:text="@string/connect_with"
            android:textColor="@color/white"
            android:textSize="@dimen/visible_text_reading_size" />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:background="@drawable/facebook"
            android:gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google_sign_up"
                android:layout_width="136dp"
                android:layout_height="35dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/google"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fb"
                android:layout_width="136dp"
                android:layout_height="35dp"
                android:layout_marginStart="34dp"
                android:background="@drawable/facebook"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
