<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_monthly_row"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation = "horizontal"
    android:layout_centerInParent="true"
    android:padding = "10dp">

    <TextView
        android:id="@+id/lv_mrank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/home_page_button_text"
        android:maxLines="1"
        android:text="&#35; &#45;&#45;"/>

    <TextView
        android:id="@+id/lv_musername"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_page_button_text"
        android:maxLines="1"
        android:maxLength="50"
        android:ellipsize="end"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/lv_mpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_page_button_text"
        android:maxLines="1"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/lv_mpoints_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pts"
        android:maxLines="1"
        android:layout_marginStart="6dp"
        android:textSize="@dimen/user_profile_points_text"/>

</LinearLayout>
