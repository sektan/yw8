<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RestaurantProfileActivity"
    tools:showIn="@layout/activity_similar_rest_prof"
    android:background="@color/white">

    <include
        android:id="@+id/restaurant_profile_toolbar"
        layout="@layout/tool_bar"/>

    <RelativeLayout
        android:id="@+id/restaurant_wait_time_info"
        android:layout_width="match_parent"
        android:layout_below="@+id/restaurant_profile_toolbar"
        android:layout_height="170dp"
        android:elevation="4dp"
        android:background="@color/blueGreen">

        <RelativeLayout
            android:id="@+id/restaurant_wait_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/similar_wait_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wait_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp"
                    android:text="Waiting time is"
                    android:textSize="@dimen/wait_time_text_size"/>

                <TextView
                    android:id="@+id/no_of_mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:layout_marginStart="2dp"
                    android:text="0"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="mins."
                    android:layout_marginStart="2dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp"
                    android:textSize="@dimen/user_profile_reading_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/similar_wait_time">

                <TextView
                    android:id="@+id/place_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp"
                    android:text="Place is"
                    android:textSize="@dimen/wait_time_text_size"/>

                <TextView
                    android:id="@+id/quiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:layout_marginStart="2dp"
                    android:text="Quiet"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/restaurant_wait_time_info">

        <LinearLayout
            android:id="@+id/food_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/bullet_filled"/>

            <TextView
                android:id="@+id/food_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/restaurant_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_type"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/bullet_filled"/>

            <TextView
                android:id="@+id/restaurant_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rest_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_type"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/bullet_filled"/>

            <TextView
                android:id="@+id/rest_addr_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>