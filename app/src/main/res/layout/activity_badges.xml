    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/general_badge"
        android:layout_width="330dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/gen_badge_info"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:gravity="center_horizontal"
                card_view:cardBackgroundColor="@color/cardGreen"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/cv_gen_badge_image"
                    android:layout_width="37dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/general"
                    android:gravity="center_horizontal"
                    android:src="@drawable/badge_big_general" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/gen_badge_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/cv_gen_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cv_gen_name"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/general"
                        android:textColor="@color/blueGreen"
                        android:textSize="@dimen/home_page_reading_text" />

                    <TextView
                        android:id="@+id/cv_gen_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/gen_level"
                        android:textColor="@color/blueGreen"
                        android:textSize="@dimen/home_page_reading_text" />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

