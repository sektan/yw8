<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dishq.buzz.ui.SignUpActivity">


    <TextView
        android:id="@+id/signintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:alpha="0.86"
        android:text="@string/start_signin_message"
        android:textSize="@dimen/visible_text_reading_size" />

    <TextView
        android:id="@+id/restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/restaurants"
        android:alpha="0.86"
        android:textSize="@dimen/visible_text_reading_size" />

    <TextView
        android:id="@+id/pubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/pubs"
        android:alpha="0.86"
        android:textSize="@dimen/visible_text_reading_size" />

    <TextView
        android:id="@+id/bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63.3dp"
        android:gravity="center_horizontal"
        android:text="@string/bars"
        android:alpha="0.86"
        android:textSize="@dimen/visible_text_reading_size" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/facebook"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/facebook"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/google_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:background="@drawable/google"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_acc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:alpha="0.86"
            android:textSize="@dimen/visible_text_reading_size"
            android:text="@string/new_account" />

        <TextView
            android:id="@+id/login_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/visible_text_reading_size"
            android:text="@string/text_signup"
            android:textColor="@color/blueGreen" />

    </LinearLayout>

</LinearLayout>
